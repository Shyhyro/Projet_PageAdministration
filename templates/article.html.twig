{% extends 'base.html.twig' %}
{% block title %}Articles{% endblock %}

{% block css %}
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
{% endblock %}

{% block body %}
    <form method="post" action="#" class="row">
        <input class="col s2" placeholder="Article Title" type="text">
        <div class="input-field col s2">
            <select name="user" class="browser-default">
                <option value="" disabled selected>Article creator</option>
                <option value="Utilisateur1">Utilisateur 1</option>
                <option value="Utilisateur2">Utilisateur 2</option>
                <option value="Utilisateur3">Utilisateur 3</option>
            </select>
        </div>
        <div class="input-field col s2">
            <select name="category" class="browser-default">
                <option value="" disabled selected>Choose your option</option>
                <option value="category1">category 1</option>
                <option value="category2">category 2</option>
                <option value="category3">category 3</option>
            </select>
        </div>
        <button type="button">New article</button>
    </form>
    <table class="striped centered responsive-table">
        <thead>
        <tr>
            <th>Article</th>
            <th>Creator</th>
            <th>Registration</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Title</td>
            <td>Alvin</td>
            <td>00/00/00</td>
            <td>Others</td>
            <td><button type="button">Edit</button><button type="button">Delete</button></td>
        </tr>
        </tbody>
    </table>
{% endblock %}

{% block javascript_end %}
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="js/materialize.min.js"></script>
{% endblock %}