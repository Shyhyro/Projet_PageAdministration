{% extends 'base.html.twig' %}
{% block title %}User Administration{% endblock %}

{% block css %}
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
{% endblock %}

{% block body %}
    <form action="index.php?controller=user&action=add" class="row" method="post">
        <label class="col" for="user"></label>
        <input name="user" class="col s2" id="user" placeholder="New Username" type="text">
        <button class="col s1" type="submit">New User</button>
    </form>
    <form action="index.php?controller=user&action=edit" class="row" method="post">
        <div class="input-field col s2">
            <select name="user" class="browser-default">
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.username }}</option>
                {% endfor %}
            </select>
        </div>
        <input name="newUsername" class="col s2" placeholder="new username" type="text">
        <button type="submit">Update</button>
    </form>
    <table class="striped centered responsive-table">
        <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Registration</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.registration }}</td>
                <td>
                    <a href="index.php?controller=user&action=delete&user={{ user.id }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript_end %}
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="js/materialize.min.js"></script>
{% endblock %}